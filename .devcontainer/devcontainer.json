{
    "name": "ROS Noetic Dev Container",
    "dockerComposeFile": [
        "../docker-compose-nvidia.yaml",
        "../docker-compose-headless.yaml"
    ],
    "service": "ros_noetic",
    "workspaceFolder": "/home/dev/ros_ws",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-iot.vscode-ros",
                "ms-python.python",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "remoteUser": "dev"
}